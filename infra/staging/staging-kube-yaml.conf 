server {
	server_name staging.kubeyaml.com;
	location / {
		proxy_pass http://localhost:8000;
	}


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/staging.kubeyaml.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/staging.kubeyaml.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = staging.kubeyaml.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name staging.kubeyaml.com;
    listen 80;
    return 404; # managed by Certbot
}